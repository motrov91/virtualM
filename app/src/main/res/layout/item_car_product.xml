<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/Margin_10dp">

    <ImageView
        android:id="@+id/image_product_buy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Margin_10dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/name_product_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nombre"/>
        <TextView
            android:id="@+id/description_product_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_product_buy"
            android:text="descripcion"/>
        <TextView
            android:id="@+id/price_product_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_product_buy"
            android:text="5000"/>
        <TextView
            android:id="@+id/cant_product_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_product_buy"
            android:text="0"/>

        <ImageButton
            android:id="@+id/delete_product_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/name_product_buy"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_product_buy"
            android:text="00000"
            android:layout_alignEnd="@id/name_product_buy"
            />
    </RelativeLayout>

</LinearLayout>