<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardElevation="4dp"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_margin="2dp">
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:background="@color/colorPrimary" />
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productImage"
                android:layout_marginLeft="@dimen/marginLeftProduct"
                android:layout_marginTop="7dp"
                android:text="Nombre Producto" />
            <TextView
                android:id="@+id/price_simbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginLeft="@dimen/marginLeftProduct"
                android:text="$"
                android:textColor="@color/black_color"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/price_simbol"
                android:text="000000"
                android:textColor="@color/black_color"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_simbol"
                android:layout_marginLeft="@dimen/marginLeftProduct"
                android:text="DescripciÃ³n del producto"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/product_description"
                android:layout_marginLeft="@dimen/marginLeftProduct"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_button_product"
                android:text="Comprar"
                android:textSize="8sp"
                android:textColor="@color/colorText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>